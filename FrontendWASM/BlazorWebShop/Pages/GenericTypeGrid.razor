<AutoGridomponent Items="employees" ></AutoGridomponent>

@code {
    public List<Employee> employees;

    protected override void OnInitialized()
    {
        base.OnInitialized();
        employees = new List<Employee>()
        {
            new Employee{ Id=1,Name="John Doe",Address="Colombo Sri Lanka", Age=32},
            new Employee{ Id=2,Name="Ajith Ramawickrama",Address="New York, USA", Age=50},
            new Employee{ Id=3,Name="Grahm Smith",Address="Sydney, Australia", Age=35}
        };
    }

    public class Employee{

        public int Id { get; set; }
        public string Name { get; set; }
        public string Address { get; set; }
        public int Age { get; set; }
    }

}
